<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
</head>
<body>
    <script>
        mang1 =['Polaris', 'Aldebaran', 'Deneb', 'Vega', 'Altair','Dubhe','Regulus'];
        mang2=['Ursa Minor', 'Tarurus', 'Cygnus', 'Lyra', 'Aquila', 'Ursa Major','Leo'];
        tim_sao();
        function tim_sao()
        {
            var ten_sao=prompt('Nhập vào tên ngôi sao : ');
            var check='0';
            for(var x=0;x<mang1.length;x++)
                {
                    if(ten_sao==mang1[x])
                    {
                        check=0;
                        break;
                    }
                    else{
                        check+=1;
                    }
                }
            if(check==0)
            {
                alert(mang2[x]);
            }
            else
            {
                alert('Không tìm thấy ngôi sao này');
            }
        }
    </script>
</body>
</html>
